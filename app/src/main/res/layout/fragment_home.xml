<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FBFA"
    android:orientation="vertical"
    tools:context=".view.fragment.HomeFragment">

    <ImageView
        android:layout_gravity="left"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:src="@mipmap/img_logo" />
    <TextView
        android:layout_marginTop="4sp"
        android:text="Hola, Eduardo "
        android:textSize="12sp"
        android:fontFamily="@font/kawakmedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_banner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/kawakbold"
                android:textColor="@color/white"
                android:text="salva vidas"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/kawakbold"
                android:text="únete hoy y"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kawakmedium"
        android:text="Categorías"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnlDog"
            android:layout_margin="4sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorVerde"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/img_dog" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="4sp"
                android:fontFamily="@font/kawakregular"
                android:text="Perros"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnlCat"
            android:layout_margin="4sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:padding="12dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"

                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:src="@mipmap/img_cat"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="4sp"
                android:fontFamily="@font/kawakregular"
                android:text="Gatos"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnlBird"
            android:layout_margin="4sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:padding="12dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:src="@mipmap/img_bird"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="4sp"
                android:fontFamily="@font/kawakregular"
                android:text="Aves"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnlRabbit"
            android:layout_margin="4sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:padding="12dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:src="@mipmap/img_rabit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="4sp"
                android:fontFamily="@font/kawakregular"
                android:text="Conejos"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kawakmedium"
        android:text="Veterinarias"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        android:textSize="12sp" />
  <LinearLayout
      android:id="@+id/lnlVeterinaria"
      android:gravity="center"
      android:padding="16dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:background="@mipmap/img_fondo1"
      android:layout_height="wrap_content">

      <ImageView
          android:src="@mipmap/img_card1"
          android:layout_width="70dp"
          android:layout_height="70dp"/>
      <LinearLayout
             android:layout_marginLeft="16dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:text="Atención 24 Horas"
              android:fontFamily="@font/kawakbold"
              android:textColor="@color/white"
              android:textSize="14sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_marginTop="4sp"
              android:text="Encuentra la mejor atención para el cuidado de nuestros pequeños engreídos."
              android:fontFamily="@font/kawakregular"
              android:textColor="@color/white"
              android:textSize="14sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
      </LinearLayout>
  </LinearLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kawakmedium"
        android:text="Campañas"
        android:layout_marginBottom="4sp"
        android:textColor="@color/black"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/lnlCampania"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@mipmap/img_fondo2"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/img_card2"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Campañas de veterinarias"
                android:fontFamily="@font/kawakbold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="4sp"
                android:text="La medicina preventiva veterinaria es la base de un buen sistema de salud."
                android:fontFamily="@font/kawakregular"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kawakmedium"
        android:text="Tienda"
        android:layout_marginBottom="4sp"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/lnlTienda"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@mipmap/img_fondo3"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/img_card3"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Los mejores protuctos"
                android:fontFamily="@font/kawakbold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="4sp"
                android:text="Tienda para mascotas, delivery de comida para perros y gatos."
                android:fontFamily="@font/kawakregular"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>